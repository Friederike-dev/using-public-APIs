      <section id="caro" class="caro justify-content-center section dark-bg">
        <div
          id="caro-carousel"
          class="carousel carousel-fade"
          data-bs-ride="carousel"
          data-bs-interval="3500"
        >
          <div class="container">

            <!-- Carousel Item 1 -->
            <div class="carousel-item active">
              <div class="carousel-container">
                <h2>It's time to take a break!</h2>
                <p>
                  Maybe have a coffee or a tea and check out how the weather is
                  going to be or the performance at the stock market or read
                  something interesting on wikipedia
                </p>
              </div>
            </div>
            <!-- End Carousel Item 1 -->

            <!-- Carousel Item 2 -->
            <div class="carousel-item">
